<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/textViewclassgroup"
        android:layout_below="@id/toolbar"
        android:text="Name Class"
        style="@style/styletextviewlandscape" />

    <EditText
        android:id="@+id/editnameclassgroup"
        android:text="Name Class"
        android:layout_below="@id/toolbar"
        style="@style/styleedittextlandscape"/>

    <TextView
        android:id="@+id/textViewcolorevent"
        android:layout_below="@id/textViewclassgroup"
        android:text="ID Group"
        style="@style/styletextviewlandscape"
       />

    <EditText
        android:id="@+id/IDgroup"
        android:layout_below="@id/editnameclassgroup"
        android:text="ID Group"
        style="@style/styleedittextlandscape"/>

    <TextView
        android:id="@+id/textViewnonegroup"
        android:layout_below="@id/textViewcolorevent"
        android:text="None Goup"
        style="@style/styletextviewlandscape"/>

    <EditText
        android:id="@+id/nonegroup"
        android:layout_below="@id/IDgroup"
        android:text="None Group"
        style="@style/styleedittextlandscape"/>

    <Button
        android:id="@+id/buttonaddgroupclass"
        style="@style/Buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:text="Add Group" />

</RelativeLayout>